CREATE DATABASE calendardb;

USE calendardb;

CREATE TABLE User (userID INT NOT NULL PRIMARY KEY AUTO_INCREMENT, password VARCHAR(100), name VARCHAR(100), tlf INT, calendarID INT , email VARCHAR(255));

CREATE TABLE Gruppe (groupID INT NOT NULL PRIMARY KEY, beskrivelse VARCHAR(255)); 

CREATE TABLE Calendars (calendarID INT NOT NULL PRIMARY KEY AUTO_INCREMENT, userID INT REFERENCES user (userID), groupID INT REFERENCES gruppe(groupID), isGroup BOOLEAN);

CREATE TABLE CalendarEvent (EventID INT NOT NULL PRIMARY KEY, dato DATE NOT NULL, start_tidspunkt TIME NOT NULL, slutt_tidspunkt TIME NOT NULL, beskrivelse VARCHAR(255), email VARCHAR(255));

CREATE TABLE Rooms (roomNr INT NOT NULL PRIMARY KEY, antall_plasser INT NOT NULL);

